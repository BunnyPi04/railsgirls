<%= form_with(model: idea, local: true) do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :idea_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :idea_description %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :idea_picture %>
  </div>

  <div class="row actions" style="padding: 0 15px;">
    <%= form.submit :class => 'btn btn-primary btn2 col-md-3 col-md-offset-9'%>
  </div>
<% end %>
<style>
  label {
    width: 30%;
    float: left;
  }
  input, textarea {
    width: 70%;
  }
  .btn2 {
    background-color: #428bca;
  }
</style>